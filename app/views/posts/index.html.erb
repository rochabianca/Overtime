<h1>Posts</h1>

<table>
  <thead>
    <td>ID</td>
    <td>Rationale</td>
    <td>User</td>
    <td>Date</td>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= truncate(post.rationale) %></td>
        <td><%= post.user.last_name %></td>
        <td><%= post.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>